<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- riskrunner effect, make gun fire fast -->
	<HediffDef>
		<defName>DS_RiskrunnerEffect</defName>
		<label>arc supercharger</label>
		<description>This pawn is crackling with potent arc energy. Their weapon is overcharged and will fire incredibly fast!</description>
		<hediffClass>DestinyMod.Hediff_DM_RiskrunnerEffect</hediffClass>
		<defaultLabelColor>(0, 1, 1)</defaultLabelColor>
		<isBad>False</isBad>
		<stages>
			<li>
				<statOffsets>
					<AimingDelayFactor>-0.5</AimingDelayFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
	<!-- rat king effect, make gun deal more damage based on stacks -->
	<HediffDef>
		<defName>DS_RatKingEffect</defName>
		<label>rat pack</label>
		<description>This pawn has found their rat pack. Their weapon is overcharged and will fire powerful shots!</description>
		<hediffClass>DestinyMod.Hediff_DM_RatKingEffect</hediffClass>
		<defaultLabelColor>(1, 0.84, 0)</defaultLabelColor>
		<isBad>False</isBad>
	</HediffDef>

</Defs>