    <costList>
      <Neutroamine>1</Neutroamine>
	  <Steel>10</Steel>
    </costList>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags><li>RewardStandardCore</li></thingSetMakerTags>
	<comps>
      <li Class="CompProperties_Drug">
        <listOrder>1100</listOrder>
      </li>
    </comps>
  </ThingDef>
  
</Defs>
