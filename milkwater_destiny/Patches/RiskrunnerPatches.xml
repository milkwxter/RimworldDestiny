<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Milkwater's Destiny Mod</li>
			<li>Muzzle Flash</li>
		</mods>
		
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="m_Riskrunner"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_ChargedMuzzleFalsh</def>
							<drawSize>(1,1)</drawSize>
							<offsets>
								<li>(0.5,0.1)</li>
							</offsets>
						</li>
					</value>
				</li>
				
		    </operations>
		</match>
	</Operation>
	
</Patch>